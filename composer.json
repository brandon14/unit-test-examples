{
    "name": "brandon14/unit-test-examples",
    "description": "An example repository highlighting writing PHP unit tests.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Brandon Clothier",
            "email": "brandon14125@gmail.com",
            "homepage": "https://brandonclothier.me",
            "role": "Lead Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.1.8",
        "ext-pdo": "*",
        "ext-redis": "*",
        "ext-zend-opcache": "*",
        "guzzlehttp/guzzle": "^6.3.3",
        "nesbot/carbon": "^2.5.4",
        "predis/predis": "^1.1.1",
        "psr/simple-cache": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13.1",
        "mikey179/vfsstream": "^1.6.5",
        "mockery/mockery": "^1.2.0",
        "phpmd/phpmd": "^2.6.0",
        "phpunit/phpunit": "^7.4.4",
        "roave/security-advisories": "dev-master",
        "sensiolabs/security-checker": "^5.0",
        "squizlabs/php_codesniffer": "^3.3.2"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.1.8"
        }
    },
    "scripts": {
        "security:check": "security-checker security:check ./composer.lock",
        "lint:phpcs:check": "phpcs ./",
        "lint:phpcs:fix": "phpcbf ./",
        "lint:phpmd": "phpmd ./ text ./phpmd.xml",
        "lint:php-cs-fixer:fix": "php-cs-fixer fix",
        "lint:php-cs-fixer:check": "composer run-script lint:php-cs-fixer:fix -- --dry-run",
        "lint": "composer run-script lint:phpcs:check && composer run-script lint:php-cs-fixer:check && composer run-script lint:phpmd",
        "lint:fix": "composer run-script lint:phpcs:fix && composer run-script lint:php-cs-fix:fix",
        "test": "composer run-script lint && composer run-script security:check && phpunit"
    }
}
